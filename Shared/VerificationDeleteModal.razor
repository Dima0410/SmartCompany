@if (modalDisplayShow)
{
    <div class="modal-backdrop show"></div>

    <div class="modal" id="deleteModal" tabindex="-1" style="display:block">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="OnCancelParameter"></button>
                </div>
                <div class="modal-body pb-2">
                    <p class="modal-body text-center">Вы действительно хотите удалить запись?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" @onclick="OnCancelParameter">Отмена</button>
                    <button class="btn btn-danger ml-2" type="button" @onclick="OnConfirmParameter">Удалить</button>
                </div>

            </div>
        </div>
    </div>

}

@code {
    [Parameter] public EventCallback OnCancelParameter { get; set; }
    [Parameter] public EventCallback OnConfirmParameter { get; set; }

    private bool modalDisplayShow = false;

    public void Show() => modalDisplayShow = true;
    public void Hide() => modalDisplayShow = false;

}
